@* @model List<Product>; *@
@model IEnumerable<Product>

<div>
    <a class="btn btn-dark" asp-action="Create">Create</a>
    @if (TempData["OK"] != null)
    {
        <div class="alert alert-danger p-4" role="alert">
            ไม่พบข้อมูล
        </div>
    }
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Price)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Amount)</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Amount</td>
                    <td>
                        <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-dark" onclick="return confirm('Are you sure')" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>