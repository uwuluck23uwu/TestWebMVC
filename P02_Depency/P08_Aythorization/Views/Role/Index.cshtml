@model IEnumerable<IdentityRole>;

<a asp-action="Create" class="btn btn-dark">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-name="@item.Name" class="btn btn-outline-dark">Edit</a>
                    <a asp-action="Delete" asp-route-name="@item.Name" class="btn btn-dark" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>