@model List<Product>

<a class="btn btn-outline-dark" asp-action="Create">Create</a>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Amount</th>
            <th scope="col">Acion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <th scope="row">@product.Id</th>
            <td colspn="2">@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Amount</td>
            <td>
                @*ใช้ได้ 2 แบบ*@
                @*<a class="btn btn-outline-light" href="/Products/Delete/@product.Id">Delete</a>*@
                <a class="btn btn-outline-light" asp-action="Delete" asp-route-id="@product.Id"
                   onclick="return confirm('คุณต้องการลบ [หมุ่นหล่อ] คนนี้จริงเหรอ!')">Delete</a>
            </td>
        </tr>
        }
       
    </tbody>
</table>