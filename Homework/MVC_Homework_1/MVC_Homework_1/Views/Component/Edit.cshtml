@model MVC_Homework_1.Models.Component

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Component</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Component" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeatureId" class="control-label"></label>
                <input asp-for="FeatureId" class="form-control" />
                <span asp-validation-for="FeatureId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-dark">Submit</button>
            <a asp-action="Index" class="btn btn-dark">Cancel</a>
