@model IEnumerable<ProductDetail>

<div>
    <a class="btn btn-dark" asp-controller="ProductDetail" asp-action="Create">Create</a>
    @if (TempData["OK"] != null)
    {
        <div class="alert alert-danger p-4" role="alert">
            ไม่พบข้อมูล
        </div>
    }
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(p => p.Id)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.Description)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.ImageUrl)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.CreatedDate)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.ProductId)</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Description</td>
                    <td>
                        @if (!String.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" width="60" height="60" class="rounded" />
                        }
                    </td>
                    <td>@item.CreatedDate</td>
                    <td>@item.Product.Name</td>
                    <td>
                        <a class="btn btn-outline-dark" asp-controller="ProductDetail" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-controller="ProductDetail" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark" onclick="return confirm('คุณแน่ใจไหมที่จะลบ @item.Description')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>